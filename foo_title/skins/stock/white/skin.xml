<?xml version="1.0" encoding="utf-8"?>

<skin
    author="Roman Plasil"
    name="White skin"
    width="400"
    height="22">

    <layer name="background" type="fill-images">
        <geometry type="full">
            <padding left="0" top="0" right="0" bottom="0"/>
        </geometry>
        <contents>
            <image position="left" src="left_back.png" />
            <image position="center" repeat="true" src="repeat_back.png" />
            <image position="right" src="right_back.png" />
        </contents>

        <layer name="logo" type="absolute-images">
            <geometry type="absolute">
                <size x="57" y="22"/>
                <position x="0" y="0" align="right" />
            </geometry>
            <contents>
                <image src="logoa.gif" />
            </contents>
        </layer>
    </layer>

    <layer name="text" type="text">
        <geometry type="full">
            <padding left="66" top="4" right="55" bottom="0" />
        </geometry>
        <contents spacing="20" font="Verdana" size="8">
            <label position="left" color="ff000000" font="Arial">%artist% '('%album%')' - %title%</label>
            <label position="right" color="ff000000" size="8">%_time_elapsed%/%_length%</label>
        </contents>
    </layer>

    <layer name="spacer" type="no-content">
        <geometry type="absolute">
            <size x="200" y="22" />
            <position x="0" y="0" align="left" />
        </geometry>
    </layer>
</skin>
